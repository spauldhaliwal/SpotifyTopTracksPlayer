<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:titleTextColor="@color/colorAccent"
    app:subtitleTextColor="@color/colorAccentLight"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/trackListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:background="@color/colorPrimaryDark"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:visibility="gone" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/nowPlayingBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/colorPrimary"
        app:behavior_peekHeight="56dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_anchor="@+id/nowPlayingBottomSheet"
        app:layout_anchorGravity="right">

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/playProgressBar"
            style="@style/Widget.MaterialProgressBar.ProgressBar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:max="100"
            android:progress="70"
            app:mpb_progressStyle="circular" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/playPauseFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="@color/colorAccentLight"
            app:elevation="0dp"
            app:srcCompat="@android:drawable/ic_media_play" />

    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>